<table>
  <thead>
    <tr>
      <th>Event start</th>
      <th>Event finish</th>
      <th>Description</th>
      <th>Staff attending</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.event_start %></td>
        <td><%= calendar.event_finish %></td>
        <td><%= calendar.description %></td>
        <td><% calendar.staff.each do |s|%>
          <%= s.fullname %>,
          <% end %>
        </td>
        <td><%= calendar.notes %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

