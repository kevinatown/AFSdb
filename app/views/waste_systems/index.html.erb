<p id="notice"><%= notice %></p>

<h1>Listing Waste Systems</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waste_systems.each do |waste_system| %>
      <tr>
        <td><%= waste_system.name %></td>
        <td><%= link_to 'Show', waste_system %></td>
        <td><%= link_to 'Edit', edit_waste_system_path(waste_system) %></td>
        <td><%= link_to 'Destroy', waste_system, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

