<h1>Listing Contractors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Emails</th>
      <th>Website</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contractors.each do |contractor| %>
      <tr>
        <td><%= contractor.name %></td>
        <td><%= contractor.address %></td>
        <td><%= contractor.city %></td>
        <td><%= contractor.state %></td>
        <td><%= contractor.zip %></td>
        <td><%= contractor.phone %></td>
        <td><%= contractor.fax %></td>
        <td><%= contractor.email %></td>
        <td><%= contractor.website %></td>
        <td><%= contractor.notes %></td>
        <td><%= link_to 'Show', contractor %></td>
        <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
        <td><%= link_to 'Destroy', contractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

