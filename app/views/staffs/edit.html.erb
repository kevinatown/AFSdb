<div class="section container">
    <div class="row">
    	<div class="col s12 m8 offset-m2 l8 offset-l2 ">

		<h3>Edit</h3>
		</div>
	</div>

<%= render 'form' %>

<h3>Change Account info</h3>
<%= form_for(@user, url: update_password_path ) do |u| %>
  <%= u.hidden_field :staff_id, :value => @staff.id %>
  <%= u.hidden_field :id, :value => @user.id %>
  <div class="field">
    <%= u.label :username, "Username" %><br />
    <%= u.text_field :username  %>
  </div>
  <div class="field">
    <%= u.label :password, "Password" %><br />
    <%= u.password_field :password, :autocomplete => "off"  %>
  </div>
  <div class="field">
    <%= u.label :password_confirmation %><br />
    <%= u.password_field :password_confirmation %>
  </div>
  <div class="action_container">
    <%= u.submit %>
  </div>
<% end %>

<%= link_to 'Show', @staff %> |
<%= link_to 'Back', staffs_path %> |
</div>