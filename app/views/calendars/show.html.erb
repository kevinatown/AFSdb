<% if notice.present? %>
<div class="notice-area container teal accent-3">
  <div class="row">
        <div class="col s12">
      <p id="notice" class=""><%= notice %></p>
      </div>
    </div>
</div>
<% end %>
<% if alert.present? %>
<div class="error-area container red">
  <div class="row">
        <div class="col s12">
      <p id="notice" class=""><%= alert %></p>
      </div>
    </div>
</div>
<% end %>


<section id="calendar_show">  
  <div class="section container">
  <div class='row'>
    <div class="col s12 m6">
      <p>
      <strong>Event start:</strong>
      <%= @calendar.event_start.strftime('%b %e, %Y %I:%M %p') %>
      </p>
    </div>
    <div class="col s12 m6">
      <p>
      <strong>Event finish:</strong>
      <%= @calendar.event_finish.strftime('%b %e, %Y %I:%M %p') %>
      </p>
    </div>
  </div>

  <div class='row'>
    <div class="col s6">
      <p>
      <strong>Description:</strong>
      <%= @calendar.description %>
      </p>
    </div>
    <div class="col s6">
     
     <p>
      <strong>Event type:</strong>
      <% if @calendar.event_type.present? %>
      <%= @calendar.event_type.name %>
      <% else %>
      No event type provided.
      <%end%>
      </p> 
    </div>
  </div>
  <div class="row">
     <div class="col s6">
      <p>
      <strong>At:</strong>
      <% if @calendar.job.present? %>
      <%= @calendar.job.name %>
      <% elsif @calendar.location.present? %>
      <%= @calendar.location %>
      <% else %>
      No location provided.
      <%end%>
      </p>    
    </div>
  </div>
  <div class='row'>
    <div class="col s12 m4">
      <p>
      <strong>Staff attending:</strong>
      <% if @calendar.staff.present? %>
      <%= @calendar.staff.to_a.map!{|s| s.fullname}.join(', ') %>
      <% else %>
      No staff attending.
      <%end%>
      </p>
    </div>
    <div class="col s6 m4">
      <p>
      <strong>Staff attending:</strong>
      <% if @calendar.driver.present? %>
      <%= @calendar.driver.to_a.map!{|s| s.fullname}.join(', ') %>
      <% else %>
      No staff driving.
      <%end%>
      </p>
    </div>
    <div class="col s6 m4">
      <p>
      <strong>Cars needed:</strong>
      <% if @calendar.car.present? %>
      <%= @calendar.car.to_a.map!{|s| s.nickname}.join(', ') %>
      <% else %>
      No staff driving.
      <%end%>
      </p>
    </div>
  </div>
  <div class='row'>
    <div class="col s12">
     <p>
     <strong>Notes:</strong>
     <%= @calendar.notes %>
    </p>
    </div>
  </div>
  
</div>
<% if current_user.is_admin? %>
 <div class='actions waves-effect waves-light btn'>
  <%= button_to 'Edit', edit_calendar_path(@calendar), method: :post %>
  </div>

<% end %>

</section>



